{
  "metadata": {
    "version": "3.1.0",
    "lastUpdated": "2025-10-24",
    "description": "Full-featured AI trend report with entity recognition, influence scoring, and multi-format export"
  },
  "reportSettings": {
    "detailLevel": "enhanced",
    "enableTopicClustering": true,
    "enableDeepAnalysis": true,
    "enableVisualization": true,
    "enableRecommendations": true,
    "enableHistoricalComparison": true,
    "enableTrendPrediction": true,
    "enableRelationshipAnalysis": true,
    "enableEntityRecognition": true,
    "enableInfluenceScoring": true,
    "minStoriesPerTopic": 2,
    "maxTopics": 8,
    "analysisLength": {
      "topicSummary": 50,
      "technicalAnalysis": 500,
      "impactShortTerm": 150,
      "impactLongTerm": 150
    }
  },
  "visualizationSettings": {
    "enableTopicDistribution": true,
    "enableAccountActivity": true,
    "enableKeywordCloud": true,
    "enableTopicRelationship": true,
    "enableEntityGraph": true,
    "maxAccountsInChart": 10,
    "maxKeywordsInCloud": 20,
    "maxEntitiesInGraph": 20
  },
  "entitySettings": {
    "minConfidence": 0.7,
    "maxEntitiesPerType": 10,
    "enableRelationshipGraph": true
  },
  "influenceSettings": {
    "topAccountsLimit": 20,
    "kolThreshold": 75,
    "risingStarThreshold": 1.2
  },
  "exportSettings": {
    "enableAutoExport": false,
    "formats": ["html", "pdf", "json", "markdown"],
    "outputDirectory": "exports"
  },
  "historicalSettings": {
    "comparisonDays": 7,
    "longTermDays": 30,
    "predictionDays": 7
  },
  "contentSettings": {
    "showImages": true,
    "showQualityScores": false,
    "showSourceType": true,
    "groupByTopic": true,
    "sortStoriesBy": "quality"
  }
}
